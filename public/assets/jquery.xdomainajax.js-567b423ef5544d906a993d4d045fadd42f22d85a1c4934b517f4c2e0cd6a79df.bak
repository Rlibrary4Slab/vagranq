jQuery.ajax = (function(_ajax) {

    var protocol = location.protocol,
        hostname = location.hostname,
        exRegex = RegExp(protocol + '//' + hostname),
        //YQL = 'http' + (/^https/.test(protocol) ? 's' : '') + '://query.yahooapis.com/v1/public/yql?callback=?',
        //YQL = 'http' + (/^https/.test(protocol) ? 's' : '') +'://query.yahooapis.com/v1/public/yql?q=', 
        YQL = 'https' + (/^https/.test(protocol) ? 's' : '') +'://query.yahooapis.com/v1/public/yql?q=', 
        //query = 'select * from html where url="{URL}" and xpath="*"';
        query = 'select * from htmlstring where url="{URL}" and xpath="*" &diagnostics=true&env=store%3A%2F%2Fdatatables.org%2Falltableswithkeys';

    function isExternal(url) {
        return !exRegex.test(url) && /:\/\//.test(url);
    }

    return function(o) {

        var url = o.url;
        console.log("inaaa:"+o.type)
        console.log("inaaa:"+url)
        console.log("inaaa:"+o.dataType)
        console.log("inaaa:"+YQL)

        if (/get/i.test(o.type) && !/json/i.test(o.dataType) && isExternal(url)) {

            // Manipulate options so that JSONP-x request is made to YQL

            o.url = YQL;
            o.dataType = 'json';

            console.log("in:"+o.url)
            o.data = {
                q: query.replace('{URL}',
                //url + (o.data ? (/\?/.test(url) ? '&' : '?') + jQuery.param(o.data) : '')),
                url + (o.data ? (/\?/.test(url) ? '' : '?') + jQuery.param(o.data) : ''))
                //format: 'xml'
            };
            console.log("in:"+o.data["q"])

            // Since it's a JSONP request
            // complete === success
            if (!o.success && o.complete) {
                o.success = o.complete;
                delete o.complete;
		console.log("in:"+o.complete)
            }

            o.success = (function(_success) {
                return function(data) {

                    if (_success) {
                        // Fake XHR callback.
                        _success.call(this, {
                            responseText: (data.results[0] || '')
                            // YQL screws with <script>s
                            // Get rid of them
                            .replace(/<script[^>]+?\/>|<script(.|\s)*?\/script>/gi, '')
                        }, 'success');
                    }

                };
            })(o.success);

        }

        return _ajax.apply(this, arguments);

    };

})(jQuery.ajax); 
