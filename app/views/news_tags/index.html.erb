<p id="notice"><%= notice %></p>

<h1>Listing News Tags</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Link</th>
      <th>Created_at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @news_tags.each do |news_tag| %>
      <tr>
        <td><%= news_tag.title %></td>
        <td><%= news_tag.link %></td>
        <td><%= news_tag.created_at.strftime("%Y-%m-%d %H%M") %></td>
        <td><%= link_to 'Show', news_tag %></td>
        <td><%= link_to 'Edit', edit_news_tag_path(news_tag) %></td>
        <td><%= link_to 'Destroy', news_tag, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New News tag', new_news_tag_path %>
<br>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>news_Link</th>
      <th>Created_at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @crawlingnews.each do |news| %>
      <tr>
        <% if !news.article_id%>
        <td><%= link_to news.title, new_article_path(neid: news.id) %></td>
        <% else%>
        <td style="background-color: yellow;"><%= link_to news.title, new_article_path(neid: news.id) %></td>
        <% end %>
        <td><%= news.news_link %></td>
        <td><%= news.created_at.strftime("%Y-%m-%d %H%M") %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
