
    <div class="article_list_content clearfix">
    <%= link_to image_tag(item.image, :style =>" width:70px; height: 70px; object-fit: cover;" ,:class =>"s_eyecatch_img") ,item %>

      <!--</div>-->
    <div class="article_list_text">

       <p class="article_list_title">
          <%= link_to item.title.html_safe, item  %>
       </p>
          <% if logged_in? %>
           <% if item.user.name == current_user.name %>
            <div id="user_article_editable">
            <%= link_to "編集する", edit_item_path(item) %>|
            <%= link_to "削除する", item_path(item) , :method =>  :delete, data: {confirm: "この記事を削除してよろしいですか？"} %>
          </div>
           <% else %>
              
           <%= link_to item.user.user_name, item.user ,:ref => "nofollow",:class => "article_list_title_name"%>
           <% end %>
          <% else %>
            <%= link_to item.user.user_name, item.user ,:ref => "nofollow",:class => "article_list_title_name"%>   
          <% end %>

     </div>
   </div>
