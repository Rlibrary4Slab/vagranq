

    <div class="article_list_content clearfix">
    <div id="s_article_thumbnail article_list_thumb" class="s_article_thumbnail" style="    width: 75px;
    height: 75px;
    overflow: hidden;
    background-color: #888;
    border: 1px solid #222;
    index:-1;
    margin-right: 20px;">

    <%= link_to image_tag(article.eyecatch_img, :style =>" position: relative;
    top: 50%;
    left: 50%;
    width: auto;
    height: auto;
    -webkit-transform: translate(-50%,-50%);
    -ms-transform: translate(-50%,-50%);
    transform: translate(-50%,-50%);
    " ,:class =>"s_eyecatch_img") ,article %>
      </div>
    <div class="article_list_text">

       <p class="article_list_title">
          <%= link_to article.title.html_safe, article, style: "font-size:24px;" %></p>
          <%= article.description.html_safe %>
          <span><%= article.impressionist_count %>View</span>
          <% if article.user.name == current_user.name%>
          <%= link_to "編集する", edit_article_path(article) ,:style => "float:right;"%>
          <%= link_to "削除する", article_path(article) ,:style => "float:right;", :method =>  :delete, :confirm =>"この記事を削除してよろしいですか？" %>
         <% else %>
              
           <%= link_to article.user.user_name, article.user ,:style => "float:right;"%>
         <%end%>

     </div>
   </div>


