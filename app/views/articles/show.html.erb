<%= Gon::Base.render_data({}) %>

<!-- コンテンツ -->
<div id="header_content">
<section id="topcontent" style="background-color: #ffffff;">
 <div class="topcontent_in clearfix">


<p id="notice"><%= notice %></p>

<ul class="breadcrumbs_lists" ><%= render_breadcrumbs builder: CustomBreadcrumbsBuilder %></ul>

 </div><!-- /.eyecatch_in -->
</section>
<section id="headcontent">
<div id="headline">
  <div class="head_container">
    <div class="u-clearfix" ng-non-bindable>
        <%= image_tag @article.eyecatch_img,:class =>"s_eyecatch_img" %>
      </div>
      <time datetime="<%= @article.updated_at %>" itemprop="datePublished"><%= @article.updated_at.strftime("%Y年%m月%d日") %></time>
      </br>
      <%= link_to "記事を編集する", edit_article_path(@article) if logged_in? && @article.user.name == current_user.name %>
      <h1 class="article_title"><%= @article.title %></h1>
      <div style="display:none;" id="checkAgree"><%= @article.checkagree %></div>
    </div>
    <input type="button" id="showsubmit" style="display:none;"/>
    <div class="head_social" style="float:right;">
      <ul class="social-bottun">
        <li class="hb_button"><a href="javascript:void(0);"  onclick="window.open('http://b.hatena.ne.jp/entry/http://ranq-media.com/articles/<%= @article.id%>', '', 'width=500,height=400')">B!</a></li>
        <li><span class='st_facebook_vcount' displayText='Facebook'></span></li>
        <li><span class='st_twitter_vcount' displayText='Tweet'></span></li>
      </ul>
    </div>
    <div class="head_like_user">
      <ul class="user_like">
        <li class="user">
    	 <div class="profimg"> 
         <%= link_to image_tag(@article.user.user_image_url(:thumb)), user_path(@article.user) ,:ref => "nofollow"%>
         </div>
	</li>
        <li class="like">
         <% if logged_in? %>
          <%= render 'likes/like_links', article: @article %>
         <% elsif %>
           <%= link_to image_tag('heart_0.png', { :size => "30",:border => '0', :alt => ''}),new_user_registration_path %>
         <% end %>
         </li>
        
        <li id="like-count">
          <%=  @article.likes.count id: "like-count" %>
        </li>
        
        <li style="margin-left: 20px;">
          <span><%= @article_view %></span>View
        </li>
      </ul>
    </div>
  </div>
</div>
</section>
</div>
<div id="wrapper" class="clearfix">
<hidden type="text" id="getattrlink" ></hidden>
<div id="column_content" class="article_column">
<div class="article_content"> 

  <%= @article.description.html_safe %>
  <% if @article.contents.count >= 5%>
  
  
   <% ranking_count=0%>
   <div class="mokuji">
     <ul>
      <li style="margin-bottom: 1em;">目次</li>
      <% @article.contents.each do |article| %>
       <% ranking_count += 1%>
       <li><%= ranking_count%>.<a href="#id<%= ranking_count%>"><%= article.title%></a></li>
      <% end %>
     </ul>
    </div>
   <% end %>
  <% ranking_count=0%>
  <% @article.contents.each do |article| %>
    
     <% ranking_count += 1%>
      <h2 id="id<%= ranking_count%>" class="rankingh2">
      <span class="ranking-icon"><%= ranking_count%></span>
         <!--タイトル-->
        <%= article.title.html_safe%>
      </h2>
       
         <!--説明-->
        <%= article.description.html_safe%>
      
      
       
  <% end %>

 <div class="head_social" style="float:right;">
      <ul class="social-bottun">
        <li class="hb_button">
         <a href="javascript:void(0);"  onclick="window.open('http://b.hatena.ne.jp/entry/http://ranq-media.com/articles/<%= @article.id%>', '', 'width=500,height=400')">B!</a>
        </li>
        <li><span class='st_facebook_vcount' displayText='Facebook'></span></li>
        <li><span class='st_twitter_vcount' displayText='Tweet'></span></li>
      </ul>
 </div>
<div class="prof-card">
  <div class="prof-card-content">
    <div class="">

      <div class="prof-card-left">
         <%= link_to image_tag(@article.user.user_image_url(:thumb)), user_path(@article.user) ,:ref => "nofollow"%>
      </div>
      <div class="prof-card-right">
      <h3 class="prof-user-name">
         <%= link_to @article.user.user_name, user_path(@article.user) ,:ref => "nofollow"%>
      </h3>
      <p class="prof-user-des">
         <%= @article.user.user_description.truncate(200).html_safe if @article.user.user_description !=nil%>

      </p>
      </div>
      <div class="prof-card-link">
        <span>
          <%= link_to "メディアを見る" , user_path(@article.user) %>
        </span>
      </div>
    </div>
  </div>
</div>
<%if @idsemptybool != true %>
  <div class="relation_list">
  <h2>あなたにおすすめの記事</h2>
 <% @more_like_this.each do |article| %>
   <div class="article_list pickup_list">
    <div class="article_list_content clearfix">
    <%= link_to image_tag(article.eyecatch_img,:class =>"s_eyecatch_img s_article_thumbnail", :id => "s_article_thumbnail article_list_thumb") ,article %>
    <div class="article_list_text">
       <p class="article_list_title">
          <%= link_to article.title.html_safe, article, style: "" %></p>
     </div>
   </div>
  </div>
 <% end %>
  </div>
<% end %>
</div><!-- /article_content -->
</div><!-- /#column_content -->
</div>
