        </a>
        <% @notification_counts = current_user.notifications.where(flag:false).count %>
        <span id="notification_count"><%= @notification_counts %></span>
        <div id="notificationContainer">
          <div id="notificationTitle">通知領域</div>
          <div id="notificationsBody" class="notifications">
