  <% if logged_in? %>
   <%# if user_signed_in? %> 
    <ul class="header-navi is-non-login" id="non_login_user_header_menu"> 
      <li class="header-navi-menu"><%= link_to "記事を投稿する", new_article_path ,:ref => "nofollow"%></li><!--　ドメインパワーなし -->
      <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
          
