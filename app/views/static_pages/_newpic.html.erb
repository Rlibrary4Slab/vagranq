    <div class="headline is-border">
        <h2 class="headline-title">新着のピックアップ</h2>
    </div>
    <div class="article_list pickup_list">

    <% @articles.order(created_at: :desc).each do |article| %>

    <div class="article_list_content clearfix">

    <%= link_to image_tag(article.eyecatch_img,:class =>"s_eyecatch_img s_article_thumbnail", :id => "s_article_thumbnail article_list_thumb") ,article %>
     <!-- </div>-->
    <div class="article_list_text">
      
       <p class="article_list_title">
          <%= link_to article.title.html_safe, article, style: "" %></p>
          <span><%= article.impressionist_count %>View</span>
          <%= link_to article.user.user_name, article.user ,:class => "article_list_title_name"%> 
      
      
     </div>
   </div>
<% end %>

    <%= paginate @articles ,params: {:controller => "articles" ,:action => "index"} %>
  </div><!-- /.article_list -->
