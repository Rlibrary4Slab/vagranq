<div class="page-header">
  <h1>お問い合わせ</h1>
</div>
 
<%= form_for @inquiry, :url => inquiry_thanks_path do |f| %>
  <table class="table">
    <% if !@inquiry.article_title.nil? %> 
    <tr>
      <th>お問い合わせの種類</th>
      <td>
        <%= f.hidden_field :type %>
         <% if @inquiry.type == "20" %>
          投稿への報告 
         <% end %>
         <% if @inquiry.type == "30" %>
         投稿を書いたユーザーへの提案
         <% end %>
      </td>
    </tr>
    <tr>
      <th>投稿</th>
      <td>
        <%= f.hidden_field :article_title %>
        <%= f.hidden_field :article_id %>
        <%= @inquiry.article_title %>
      </td>
    </tr>
    <% end %>
    <tr>
      <th>名前</th>
      <td>
        <%= f.hidden_field :name %>
        <%= @inquiry.name %>
      </td>
    </tr>
    <tr>
      <th>メールアドレス</th>
      <td>
        <%= f.hidden_field :email %>
        <%= @inquiry.email %>
      </td>
    </tr>
    <tr>
      <th>お問い合わせ内容</th>
      <td>
        <%= f.hidden_field :message %>
        <%= simple_format(@inquiry.message) %>
      </td>
    </tr>
  </table>
  <%= f.submit '送信', :class => 'btn btn-primary' %>
<% end %>

