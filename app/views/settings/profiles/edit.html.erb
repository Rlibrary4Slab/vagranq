<div class="col-sm-3" >
    <%= render partial: 'settings/shared/menu'%>

    <div class="col-sm-9" >
        <div class="row" >
            
 
            <%#=form_for current_user, layout: :horizontal, url: settings_profiles_path , method: :PUT do |f| %>
            <%=form_for current_user, layout: :horizontal, url: profile_path , method: :PUT do |f| %>
                        
                <%#= f.alert_message '以下の項目を修正して下さい。' %>
                <%=f.label :name, "ユーザーID" %>
                <%= f.text_field :name %>

                <%=f.label :emain, "メールアドレス" %>
                <%= f.text_field :email  %>
                
                <%=f.label :user_name, "ユーザーネーム" %>
                <%= f.text_field :user_name %>
                
                <%=f.label :user_description,"プロフィール" %>
                <%= f.text_area :user_description %>
                
                <%=f.label :user_image,"ユーザー画像" %>
                <div class="profimg">
                 <%= image_tag current_user.user_image_url(:thumb)%>
		</div>
                <%=f.file_field :user_image %>

		<%#=f.label :header_image,"ヘッダー画像" %>
		
                <%#= image_tag current_user.header_image_url(:thumb)%>
                <%#=f.file_field :header_image %>
                 
		<%if !current_user.social_profiles.where(provider: "twitter").empty?%>
                   <%= render 'settings/profiles/share_twi_links'%>
                    <div class="twi_text">
                       <%= link_to "twitter認証解除", twitter_auth_out_path , method: :delete, data: { confirm: 'twitter認証を解除しますか?' }%>
                    </div>
                <% else %>
                     <%= link_to "twitter認証する", user_twitter_omniauth_authorize_path %>

		<% end %>
                
	

		<%if !current_user.social_profiles.where(provider: "facebook").empty?%>
                   <%= render 'settings/profiles/share_face_links'%>
                    <div class="face_text">
                        <%= link_to "facebook認証解除", facebook_auth_out_path , method: :delete, data: { confirm: 'facebook認証を解除しますか?' }%>
                        </div>
                <% else %>
                     <%= link_to "facebook認証する" ,  user_facebook_omniauth_authorize_path %>
                
		<% end %>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                      <%= f.submit '更新する', class: 'btn btn-primary' %>
                    </div>
                </div>
            <%end%>
        </div>
    </div>
</div>
