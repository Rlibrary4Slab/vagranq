<div class="col-sm-3">
    <%= render partial: 'settings/shared/menu'%>

    <div class="col-sm-9">
        <div class="row" >
            
 
            <%=form_for current_user, layout: :horizontal, url: settings_profiles_path , method: :PUT do |f| %>
            
                <%#= f.alert_message '以下の項目を修正して下さい。' %>
                
                <%=f.label :user_name, "ユーザーネーム" %>
                <%= f.text_field :user_name %>
                
                <%=f.label :user_description,"プロフィール" %>
                <%= f.text_area :user_description %>
                
                <%=f.label :user_image,"ユーザー画像" %>
                <%= image_tag current_user.user_image_url(:thumb)%>
		
                <%=f.file_field :user_image %>
                <!--
		<%=f.label :header_image,"ヘッダー画像" %>
		
                <%= image_tag current_user.header_image_url(:thumb)%>
                <%=f.file_field :header_image %>
		-->
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                      <%= f.submit '更新する', class: 'btn btn-primary' %>
                    </div>
                </div>
            <%end%>
        </div>
    </div>
</div>
